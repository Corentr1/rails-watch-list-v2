<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.picsum.photos/id/1079/4496/3000.jpg?hmac=G-dJcpU08vEMqjUz2rb3IxjOG99rcePqW9BF1IsPLf0);">
  <div class="container">
    <h1 class="text-align: center">Save <strong>any kind</strong> of movies!</h1>
  </div>
</div>

<div class="container">
<h2 class="text-align: center;">My lists</h2>
  <div class="cards">
    <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fill %>)">
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://i.picsum.photos/id/1079/4496/3000.jpg?hmac=G-dJcpU08vEMqjUz2rb3IxjOG99rcePqW9BF1IsPLf0)">
    <% end %>
        <p><%= link_to "#{list.name}", list_path(list), style: "text-decoration: none; color: white;" %></p>
      </div>
    <% end %>
  </div>
</div>
